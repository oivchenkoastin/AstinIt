@model List<Article>

@{
    ViewBag.Title = "Секция городов";
    Layout = "~/Views/Admin/_Layout.cshtml";
}

<h2>Article</h2>
<a href="/Article/Create"><div class="btn btn-primary">Add</div></a>
<div class="userArticleGrid">
    <table class="table">
        <thead class="thead-dark">
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Language</th>
            <th scope="col">Active</th>
            <th scope="col">Link</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var p in Model)
        {
            string color = p.Active ? "table-success" : "table-secondary";
            <tr>
                <td class="">
                    @p.Name
                </td>
                <td class="">
                    @p.Language.Name
                </td>
                <td class="@color">
                    @p.Active
                </td>
                <td class="">
                    <a href="/article/Article/@p.Id">Edit</a>

                    <a href="/article/delete/@p.Id">Delete</a>

                </td>
            </tr>
        }

        </tbody>
    </table>

</div>