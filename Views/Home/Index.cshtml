<div class="container text-center">
    <div class="row">
        <div class="col-md-3">
            <div id="Vacancies">
                @{
                    foreach (var vac in (List<Vacancy>)ViewBag.Vacancies)
                    {
                        <div class="vacancyItem">
                            <div class="vacancyPositionName">
                                @vac.PositionName
                            </div>
                            <div class="vacancyTechnologies">
                                @vac.Technologies
                            </div>
                            <div class="vacancyLastUpdated">
                                @DateTime.Today.Day
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>
