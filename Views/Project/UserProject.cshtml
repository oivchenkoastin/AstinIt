@using AstinIt.Areas
@model Project

@{
    ViewBag.Title = Model.Name;

    if (Model.ProjectCost == null)
    {
        Model.ProjectCost = new List<ProjectCost>();
    }
}

<div class="container">
<h2>@Html.DisplayFor(model => model.Name) </h2>

<hr/>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        
        
        @Html.HiddenFor(model => model.Id)
        
        
        <div class="form-group">
            <h5>@Html.LabelFor(model => model.Active, htmlAttributes: new {@class = "control-label col-md-2"})</h5>
            <div class="col-md-12">
                @Model.Active
            </div>
        </div>
        
        <div class="form-group">
            <h5>@Html.LabelFor(model => model.Name, htmlAttributes: new {@class = "control-label col-md-2"})</h5>
            <div class="col-md-12">
                @Model.Name
            </div>
        </div>

        <div class="form-group">
            <h5>@Html.LabelFor(model => model.Description, htmlAttributes: new {@class = "control-label col-md-2"})</h5>
            <div class="col-md-12">
                @Model.Value
            </div>
        </div>
    </div>
}


<div class="userInfoGrid">
    <table class="table">
        <thead class="thead-dark">
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Value</th>
            <th scope="col">Currency</th>
            <th scope="col">Link</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var p in Model.ProjectCost)
        {
            string color = p.Active ? "table-success" : "table-secondary";
            <tr>
                <td class="">
                    @p.Name
                </td>
                <td class="">
                    @p.Description
                </td>
                <td class="@color">
                    @p.Value
                </td>
                <td class="@color">
                    @p.Currency.Name
                </td>
                <td class="">
                    <a href="/ProjectCost/UserProjectCost/@p.Id">Details</a>
                </td>
            </tr>
        }

        </tbody>
    </table>

</div>
</div>